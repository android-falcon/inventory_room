<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/color1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/home" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/collecting_data"
                android:textColor="@color/grayLight"
                android:textSize="35sp"
                android:textStyle="bold"
                app:fontFamily="serif-monospace" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/collData"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing_yellow"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/collDataq"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/coolect_item" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/collecting_data"
                            android:textColor="@color/grayLight"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/amita" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/collByExp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:visibility="gone">

                        <Button
                            android:id="@+id/collByExpa"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/date" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/collecting_data_by_expiry_date"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/collByorg"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:visibility="gone">

                        <Button
                            android:id="@+id/collByorgq"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/collect2" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/collecting_data_by_org_code"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/transfer"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing_yellow"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/transfer1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/send_icon" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/transfer_data"
                            android:textColor="@color/grayLight"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/amita" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/collByRecep"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/no_thing"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/collByRecepa"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/receipt" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/collecting_data_with_receipt"
                            android:textColor="@color/orFloor"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>